      <h2>Add Review to <%= @restaurant.name.capitalize %></h2>
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <div>
        <% if @review.errors.any? %>
        <% @review.errors.full_messages.each do |error| %>
        <h5><%= error %></h5>
        <% end %>
      </div>
      <% end %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.button :submit, class: "btn btn-dark" %>
      <% end %>
