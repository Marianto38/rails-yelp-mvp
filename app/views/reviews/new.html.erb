<div class="container col-8">
  <h1> Add Coment To Restaurant</h1>
    <hr>
      <h2><%= @restaurant.name.capitalize %></h2>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.button :submit, class: "btn btn-dark" %>
      <% end %>
</div>
